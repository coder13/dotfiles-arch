# i3status configuration file.
# see "man i3status" for documentation.

general {
	colors = true
	interval = 1
}

order += "wireless _first_"
order += "battery all"
order += "memory"
order += "tztime local"

wireless _first_ {
	format_up = "%essid"
	format_down = "W: down"
}

battery all {
	format = "%status %percentage %remaining"
}

memory {
	format = "%used"
	threshold_degraded = "1G"
	format_degraded = "MEMORY < %available>"
}

tztime local {
	format = "%m-%d-%Y3 %H:%M:%S"
}
