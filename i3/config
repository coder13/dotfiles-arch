# resize window (you can also use the mouse for that)
mode "resize" {
    bindsym Up move up 24px
    bindsym Left move left 24px
    bindsym Down move down 24px
    bindsym Right move right 24px

    bindsym ctrl+Left resize shrink width 24 px
    bindsym ctrl+Down resize grow height 24 px
    bindsym ctrl+Up resize shrink height 24 px
    bindsym ctrl+Right resize grow width 24 px

    bindsym shift+Left resize shrink width 4 px
    bindsym shift+Down resize grow height 4 px
    bindsym shift+Up resize shrink height 4 px
    bindsym shift+Right resize grow width 4 px

    # back to normal: Enter or Escape or $mod+r
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

exec --no-startup-id nm-applet

